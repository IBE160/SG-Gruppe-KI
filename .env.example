# FRONTEND / NEXT.JS
# --------------------------
NEXT_PUBLIC_API_URL=http://localhost:8000   # URL til FastAPI backend

# --------------------------
# BACKEND / FASTAPI
# --------------------------
# Secret key for FastAPI (JWT, session, etc.)
FASTAPI_SECRET_KEY=
FASTAPI_ENV=development   # development / production

# --------------------------
# DATABASE / SUPABASE
# --------------------------
# Supabase URL for the FastAPI backend
SUPABASE_URL=
# Supabase Key for the FastAPI backend (usually the anon key or service role key for RLS, depending on usage)
SUPABASE_KEY=
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
# The service role key is a secret and should not be prefixed with NEXT_PUBLIC_
SUPABASE_SERVICE_ROLE_KEY=
NEXT_PUBLIC_SUPABASE_DB_SCHEMA=public

# --------------------------
# AUTHENTICATION / OAUTH
# --------------------------
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# --------------------------
# OPTIONAL / DEBUG
# --------------------------
DEBUG=
APP_ENV=development
NEXTAUTH_SECRET=

